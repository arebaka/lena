[*]
end_of_line  = lf
indent_style = tab
tab_width    = 4
indent_size  = 4
charset      = utf-8

insert_final_newline     = true
trim_trailing_whitespace = true

[{**.yml,**.yaml}]
indent_style = space
indent_size  = 2

[**.md]
trim_trailing_whitespace = false

[**.txt]
trim_trailing_whitespace = false
insert_final_newline     = false
